@model SameDayServicezFinal.Models.PortalList
@{
    ViewBag.Title = "Wallet";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="~/Content/profile.css" rel="stylesheet" />
<script src="~/Scripts/profile.js"></script>
<script src="~/Scripts//bootstrap-checkbox.js"></script>
<script src="~/Scripts/jquery.loading.js"></script>
<script src="~/Scripts/sweetalert.js"></script>
<script src="~/Scripts/miniApps.js"></script>
<script src="~/Scripts/moment.js"></script>

<script>
    $(function () {
        $("#datepicker").datepicker();
    });
</script>

<div class="page">
    <!-- Main Navbar-->

    @Html.Partial("_PortalMenu", Model.ApplicationUser)


    <div class="page-content d-flex align-items-stretch">
        <div class="content-inner" style="padding-bottom: 59px;padding-top: 30px;">




            <div class="row">
                <div class="col-3">
                    <div class="input-group ">
                        <label class="text-light" style="margin-left:10px;font-size: 0.8rem;color: #212529;font-weight:bold;">Choose Your Project:</label>
                        <select class="form-control " style="width: 100%;margin:10px">

                            @foreach (var item in Model.ProjectApplies)
                            {
                                <option>@item.ProjectTitle</option>
                            }
                        </select>

                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-6">

                    <div class="card">
                        <div class="card-header">
                            <h3 class="card-title">Your Project Hours</h3>
                        </div>
                        <div class="card-body">
                            <div class="miniAppContainer col-12" data-miniapptype="time-duration-calculator" id="miniAppContainer">
                                <div id="miniAppContent">
                                  
                                    <table class="table table-dark">
                                        <tbody>
                                        <thead>
                                            <tr>
                                                <th>Date</th>
                                                <th>Start Time</th>
                                                <th>End Time</th>
                                                <th>Duration</th>
                                                <th></th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <tr>
                                                <td><input type="text" id="datepicker"></td>
                                                <td>
                                                    <input class="inpTime roundedInput" id="inputTime1" style="width: 100px; text-align: center;" type="text" /><br>
                                                    <span style="font-size: .8em;">(eg 8:00 am)</span>
                                                </td>
                                                <td>
                                                    <input class="inpTime roundedInput" id="inputTime2" style="width: 100px; text-align: center;" type="text" /><br>
                                                    <span style="font-size: .8em;">(eg 5:00 pm)</span>
                                                </td>
                                                <td>
                                                    @*<div id="timeDurationDecimal" style="font-size: 2em;display:inline-block;margin-right:5px"> </div>*@
                                                    <div id="timeDurationHoursMinutes" style="font-size: 1em;display:inline-block"> </div>
                                                </td>
                                                <td>
                                                    <div>
                                                        <input id="butReset" type="button" value="Add Time" class="btn btn-primary">
                                                        <input id="butReset" type="button" value="Reset Time" class="btn btn-primary">
                                                    </div>
                                                </td>
                                            </tr>


                                        </tbody>
                                    </table>

                                </div>

                            </div>
                        </div>
                    </div>




                   


                </div>
            </div>




           








                    <!-- End of OnTheClock code -->
                    <!-- Page Footer-->
                    <footer class="main-footer">
                        <div class="container-fluid">
                            <div class="row">
                                <div class="col-sm-6">
                                    <p> </p>
                                </div>
                                <div class="col-sm-6 text-right">
                                    <p>Version 1.0.0</p>
                                </div>
                            </div>
                        </div>
                    </footer>
                </div>
            </div>


        </div>

