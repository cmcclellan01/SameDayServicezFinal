                                    <div><span class="dont-forget text-warning">Don't forget to click update profile to save your change.</span></div>
                                </div>




                                @{
                                    string workmode = "";

                                    if (Model.InWorkMode)
                                    {
                                        mode = "Ready for hire";
                                    }
                                    else
                                    {
                                        mode = "Off Work";
                                    }

                                }

                                <div class="form-group  col-md-4 @if (!Model.IsInContractorMode) { <text>d-none</text>} ">
                                    <span class="control-label text-light ">Work Mode:</span> <span class="current-work-mode" style='color:#015668;font-size:1rem'>@mode</span>
                                    @Html.CheckBoxFor(m => m.InWorkMode, new { @class = "InWorkMode form-control", data_cls = "btn-secondary", data_off_cls = "null", data_on_cls = "null", data_on_active_cls = "null", data_off_active_cls = "null" })
                                </div>


                                <div class="form-group  col-md-4 ">
                                    <span class="control-label text-light ">Contact By Email:</span>
                                    <span class="ContactByEmailMode" style='color:#015668;font-size:1rem'>
                                        @{switch (Model.ContactWithEmail)
                                            {
                                                case true:<text>Yes</text> break;
                                            case false:<text>No</text>break;
                                    }}
                                    </span>
                                    @Html.CheckBoxFor(m => m.ContactWithEmail, new { @class = "ContactByEmail form-control", data_cls = "btn-secondary", data_off_cls = "null", data_on_cls = "null", data_on_active_cls = "null", data_off_active_cls = "null" })
                                </div>

                                <div class="form-group  col-md-4 ">
                                    <span class="control-label text-light ">Contact By Phone:</span>
                                    <span class="ContactByPhoneMode" style='color:#015668;font-size:1rem'>
                                        @{switch (Model.ContactWithPhone)
                                            {
                                                case true:<text>Yes</text> break;
                                            case false:<text>No</text>break;
                                    }}
                                    </span>
                                    @Html.CheckBoxFor(m => m.ContactWithPhone, new { @class = "ContactByPhone form-control", data_cls = "btn-secondary", data_off_cls = "null", data_on_cls = "null", data_on_active_cls = "null", data_off_active_cls = "null" })
                                </div>

                            </div>







                        </div>
                    </div>

